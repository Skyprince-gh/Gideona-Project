<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <% include partials/importHeader.ejs %>
    <title>Gido Pastry House | Home</title>
</head>
<!-- End of the head -->

<body>
    <div id="page">

        <div class="header">
            <% include partials/index-nav.ejs %>
            <div class="landing center">
                <h1>Best you will ever taste.</h1>
                <p>We make pastry products of all kinds, and we know your event is not complete without our service.</p>
                
            </div>
        </div>
        <!-- end of the header section -->

        <div class="content grey lighten-2 center">
            <div class="menu">
                <h3>Menu</h3>
                <p>We have a delicious list for you to choose from: </p>
            </div>

            <aside>
                <div class="row">

                    <a href="/cakes">
                        <div class="col s12 m6 hoverable">
                            <div class="card">
                                <div class="card-image">
                                    <img src="images/cake_img-3.jpeg">
                                    <span class="card-title">Cakes</span>
                                </div>
                            </div>
                        </div>
                    </a>


                    <a href="/bread">
                        <div class="col s12 m6 hoverable">
                            <div class="card">
                                <div class="card-image">
                                    <img src="images/bread_img_6.jpeg">
                                    <span class="card-title">Breads</span>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/pizza">
                        <div class="col s12 m6 hoverable">
                            <div class="card">
                                <div class="card-image">
                                    <img src="images/pizza_img_4.jpeg">
                                    <span class="card-title">Pizza</span>
                                </div>
                            </div>
                        </div>
                    </a>

                    <a href="/croissants">
                        <div class="col s12 m12 hoverable">
                            <div class="card">
                                <div class="card-image">
                                    <img src="images/croissant_img_2.jpeg">
                                    <span class="card-title">Croissants</span>
                                </div>
                            </div>
                        </div>
                    </a>


                    <a href="/menu" class="btn brown darken-2">See More</a>
                </div>
            </aside>
        </div>

        <%- include('partials/items-menu', {basket: basket}); %>
        
<!-- <%include partials/items-menu.ejs %> -->

    </div>
</body>

<script src="scripts/jquery.min.js"></script>
<script src="scripts/materialize.min.js"></script>

</html>